<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#2c2c2c"
    android:shrinkColumns="1">

    <TableRow>

        <ImageView
            android:id="@android:id/icon"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_column="0"
            android:src="@drawable/image_bch_module" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@android:id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/preference_title_color"
                android:textSize="16sp"
                tools:text="Mycelium Bitcoin Cash Module Bitcoin Cash Module" />

            <TextView
                android:id="@android:id/summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:fontFamily="sans-serif"
                android:textColor="#bdbdbd"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:text="Mycelium Bitcoin Cash Module Summary Cash Module Summary" />

            <TextView
                android:id="@+id/sync_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif"
                android:textColor="#77c298"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:text="Fully synced" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_column="1"
            android:layout_marginStart="16dp"
            android:background="#252525" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/under_icon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:text="BCH Module" />

        <!-- Preference should place its actual preference widget here. -->
        <FrameLayout
            android:id="@android:id/widget_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:paddingTop="16dp" />
    </TableRow>
</TableLayout>
