<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.arch.lifecycle.AndroidViewModel" />

        <import type="android.view.View" />

        <import type="com.mycelium.wallet.Utils" />

        <import type="com.mycelium.wapi.wallet.currency.CurrencyValue" />


        <variable
            name="activity"
            type="android.support.v7.app.AppCompatActivity" />
        <variable
            name="viewModel"
            type="com.mycelium.wallet.activity.receive.ReceiveCoinsViewModel" />
    </data>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false">


        <LinearLayout
            android:id="@+id/llRoot"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="0dp">

            <include layout="@layout/receive_coins_activity_heap"
                bind:viewModel="@{viewModel}"/>

            <include layout="@layout/receive_coins_activity_qr" />

            <include layout="@layout/receive_coins_activity_ro"
                bind:viewModel="@{viewModel}"/>

            <!-- Bitcoin Address -->
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <include layout="@layout/receive_coins_activity_addr"
                    bind:viewModel="@{viewModel}"/>


                <ImageView
                    android:id="@+id/ivNfc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.isNfcAvailable() ? View.VISIBLE : View.GONE}"
                    android:src="@drawable/nfc_logo"
                    android:onClick="@{_ -> Utils.showSimpleMessageDialog(activity, @string/nfc_payment_request_hint) }"
                    android:paddingEnd="20dp"
                    android:layout_gravity="center_vertical|end"
                    android:contentDescription="@string/nfc_payment_request_hint" />
            </FrameLayout>

            <!-- Amount -->

            <TextView
                android:id="@+id/tvAmountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:paddingTop="10dp"
                android:text="@{CurrencyValue.isNullOrZero(viewModel.requestedAmount) ? @string/optional_amount : @string/amount_title}"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <!-- Amount -->

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:hint="@{viewModel.hint}"
                        android:textColorHint="@color/darkgrey"
                        android:textSize="20sp" />

                    <!-- Fiat Amount -->

                    <TextView
                        android:id="@+id/tvAmountFiat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        android:textSize="13sp" />
                </LinearLayout>

                <View
                    android:layout_width="20dp"
                    android:layout_height="1dp" />

                <!-- Enter Amount button -->

                <ImageButton
                    android:id="@+id/btEnterAmount"
                    style="@style/MyceliumSlimButton"
                    android:layout_width="75dp"
                    android:layout_height="45dp"
                    android:onClick="@{_ -> viewModel.onEnterClick(activity)}"
                    android:layout_gravity="center"
                    android:contentDescription="@string/enter_amount_title"
                    android:scaleType="fitCenter"
                    android:src="@drawable/keyboard_icon" />
            </LinearLayout>

            <include
                layout="@layout/receive_coins_activity_share"
                bind:viewModel="@{viewModel}" />
        </LinearLayout>

    </ScrollView>
</layout>